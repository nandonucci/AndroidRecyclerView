<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/margin_padding_padrao"
    android:id="@+id/cardView"
    android:layout_marginBottom="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_padding_padrao">

        <ImageView
            android:layout_width="@dimen/tamanho_img"
            android:layout_height="@dimen/tamanho_img"
            android:id="@+id/imgContato"
            tools:src="@drawable/p1"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Fernando"
            android:layout_toRightOf="@id/imgContato"
            android:textSize="18sp"
            android:textStyle="bold"
            android:id="@+id/txtNome"
            android:padding="@dimen/margin_padding_padrao"
            />
    </RelativeLayout>

</android.support.v7.widget.CardView>
